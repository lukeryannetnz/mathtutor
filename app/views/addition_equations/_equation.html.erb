<div id="problem" class="text-center my-8" data-equation-id="<%= addition_equation.id %>">
  <p class="text-4xl mb-4 font-semibold">
    <%= addition_equation.operand1 %> + <%= addition_equation.operand2 %> = ?
  </p>
  
  <div class="mb-4 flex justify-center">
    <button id="show-answer-btn" class="px-6 py-3 text-lg rounded bg-blue-600 text-white hover:bg-blue-800 transition disabled:opacity-60 disabled:cursor-not-allowed mx-2">Show Answer</button>
  </div>
  
  <div id="answer" class="answer mt-4 p-4 bg-gray-100 rounded" style="display: none;">
    <p class="result text-6xl m-0">
      <strong><%= addition_equation.result %></strong>
    </p>
    <%= button_to "New Equation", :random_addition_equations, 
                class: "new-equation-btn px-6 py-3 text-lg rounded bg-gray-600 text-white hover:bg-gray-700 transition m-8",
                data: { 
                  turbo_method: :get,
                  turbo_stream: true
                } %>
  </div>
</div> 

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle show answer button clicks using event delegation
  document.addEventListener('click', function(e) {
    if (e.target.id === ('show-answer-btn')) {
      const mathProblem = e.target.closest('#problem');
      const answerDiv = mathProblem.querySelector('#answer');
      const showAnswerBtn = mathProblem.querySelector('#show-answer-btn');
      
      answerDiv.style.display = 'block';
      showAnswerBtn.style.display = 'none';
    }
  });
});
</script>